@using LittleSheep.Users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Little Sheep</title>
    <link href="~/css/style.css" type="text/css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <script src="~/scripts/jQuery.js" type="text/javascript"></script>
</head>
<body>
    <header>
        <div class="header_image">
            <div class="headerMascot">
                <a title="By creohn, Michał Pecyna (Original image: [1]; description page: [2]) [Public domain], via Wikimedia Commons" href="https://commons.wikimedia.org/wiki/File%3ASheep_in_gray.svg">
                    <img alt="Sheep in gray" src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d3/Sheep_in_gray.svg/256px-Sheep_in_gray.svg.png" />
                </a>
            </div>
        </div>
        <nav>
            <a class="toggle-nav" href="#">&#9776;</a>
            <ul class="active">
                <li><a href="~/Default.cshtml">Start</a></li>
                <li><a href="~/Pages/Categories/PacifierHolders.cshtml">Napphållare</a></li>
                <li>
                    <a href="~/Pages/Categories/StrollerAccessories.cshtml">Barnvagnstillbehör <span class="arrow">&#9660;</span></a>
                    <ul class="sub-menu">
                        <li><a href="~/Pages/Categories/StrollerMobiles.cshtml">Barnvagnsmobiler</a></li>
                        <li><a href="~/Pages/Categories/StrollerPendants.cshtml">Barnvagnshängen</a></li>
                    </ul>
                </li>
                <li><a href="~/Pages/User/ViewAccount.cshtml">Konto</a></li>
                <li><a href="~/Pages/Cart/ViewCart.cshtml">Varukorg</a></li>
                @if (UserRepository.loggedIn == true)
                {
                    <li><a href="~/Pages/User/LogIn.cshtml" onclick="@UserRepository.loggedIn = false @*make the current user null here to*@ ">Logga ut</a></li>
                }
                else if (UserRepository.loggedIn == false)
                {
                    <li><a href="~/Pages/User/LogIn.cshtml">Logga in</a></li>
                }
            </ul>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>
